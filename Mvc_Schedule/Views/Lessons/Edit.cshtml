@model Mvc_Schedule.Models.DataModels.Entities.Lesson

<script>
	$(document).ready(function() {
		
	});
</script>

<link href="@Url.Content("/Content/validation.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="page-title">Звонок: @Model.TimeString</div>

<div id="selector-block">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LessonId)
	
	<div class="editor-label">
        @Html.LabelFor(model => model.Time)
    </div>
    <div class="editor-field">
        @Html.TextBox("Time", Model.TimeString)
        @Html.ValidationMessageFor(model => model.Time)
    </div>

	<p>
        <input type="submit" value="Сохранить" />
    </p>
}
</div>