@model Mvc_Schedule.Models.DataModels.Entities.Facult

<link href="@Url.Content("~/Content/validation.css")" rel="stylesheet" type="text/css" />

<div id="page-title">Факультет @Model.Name</div>
<div id="selector-block">
@using (Html.BeginForm()) {
	@Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.FacultId)

    <div class="editor-label">
        @Html.LabelFor(model => model.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
    </div>

    <p>
        <input type="submit" value="Сохранить" />
    </p>
}

</div>