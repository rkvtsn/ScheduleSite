@model Mvc_Schedule.Models.DataModels.ModelViews.SubjectIndex

<link href="@Url.Content("/Content/validation.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style>
	li {
		margin: 10px;
		font-size: 18px;
	}
	li a {
		display: inline-block;
		padding: 5px;
		font-size: 16px;
		background: #333;
	}
	li a:hover {
		color: #333;
		background: #fff;
	}
</style>


<div id="page-title">Дисциплины</div>

<div id="selector-block">
@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    <div class="editor-label">
		@Html.LabelFor(x => x.NewSubject.Name)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.NewSubject.Name)
        @Html.ValidationMessageFor(model => model.NewSubject.Name)
    </div>
		
	<p>
		<input type="submit" value="Добавить" />
	</p>
}
@if(Model.ListSubjects.Any())
{
	<p class="title">Список дисциплин:</p>
	<ul>
	@foreach (var subject in Model.ListSubjects)
  {
		<li>
			@Html.ActionLink("Изменить", "Edit", new { id = subject.SubjectId })
			@Html.ActionLink("Удалить", "Delete", new { id = subject.SubjectId })
			@subject.Name
		</li>
  }
	</ul>
}else
{
	<p class="title">Список дисциплин пуст</p>
}
</div>